<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
			">


	<bean id="sqlSessionFactoryRpb" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mapperLocations">
			<list>
				<value>classpath*:com/shouyingbao/pbs/mapper/xml/*.xml</value>
			</list>
		</property>
	</bean>


	<bean id="sqlSessionFactory" class="com.shouyingbao.sql.MutilSessionFactory">
		<property name="sqlSessionFactory">
			<ref bean="sqlSessionFactoryRpb" />
		</property>
	</bean>


	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory" />
	</bean>

	<bean id="baseDao" class="com.shouyingbao.core.framework.mybatis.dao.impl.BaseDaoImpl">
		<property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
	</bean>



</beans>
